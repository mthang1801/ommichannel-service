{
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"assets": [
			{ "include": "../views", "watchAssets": true },
			{ "include": "i18n/**/*", "watchAssets": true }
		],
		"plugins": [
			{
				"name": "@nestjs/swagger",
				"options": {
					"dtoFileNameSuffix": [".dto.ts", ".entity.ts", ".model.ts"]
				}
			}
		]
	}
}
